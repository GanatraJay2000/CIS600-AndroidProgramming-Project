<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title "Upstate New York" -->
        <TextView
            android:id="@+id/titleUpstateNewYork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upstate New York"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginTop="24dp" />

        <!-- Search bar -->
        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search..."
            android:layout_marginTop="24dp"
            android:background="@drawable/search_edittext_background"
            android:padding="12dp"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="8dp" />

        <!-- Popular locations header -->
        <TextView
            android:id="@+id/popularLocations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Popular locations"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginTop="24dp" />

        <!-- RecyclerView for popular locations -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/popularLocationsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            tools:listitem="@layout/homepage_cardview_pop" />

        <!-- "Plan your next adventure" section -->
        <TextView
            android:id="@+id/planAdventureTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plan your next adventure"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:layout_marginTop="32dp" />

        <!-- "Create new plan" button -->
        <Button
            android:id="@+id/createNewPlanButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create new plan"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/colorPrimary"
            app:cornerRadius="8dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
